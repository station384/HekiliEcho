<Window x:Class="HekiliHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        xmlns:local="clr-namespace:HekiliHelper"
        Title="Hekili Helper" Width="475" 
        SizeToContent="WidthAndHeight"
        MaxWidth="600"
Height="Auto"
        ResizeMode="CanMinimize"
         Closed="Window_Closed" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" >
    <Grid  VerticalAlignment="Center"  HorizontalAlignment="Center" Width="475" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" ></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" Name="col1"/>
            <ColumnDefinition Width="250" Name="col2"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Width="Auto" Margin="2,0,5,2" >
            <Label Name="ImageLabel" Content="Captured Image" HorizontalAlignment="Center"></Label>
            <Border Name="ImageCapBorder" BorderThickness="5"  BorderBrush="Black" Background="Black"  Width="150" Height="150">
                <Image x:Name="imageCap"  Stretch="Uniform" Margin="5,5,5,5" />
            </Border>
            <Label x:Name="lDetectedValue"   Content="" HorizontalAlignment="Center"  VerticalAlignment="Top"  Width="50"/>
            <Border Name="ImageCap2Border" BorderThickness="5" BorderBrush="Black" Background="Black"  Width="150" Height="150">
                <Image x:Name="imageCap2"  Stretch="Uniform" Margin="5,5,5,5" />
            </Border>
            <Label x:Name="lDetectedValue2" Content="" HorizontalAlignment="Center"  VerticalAlignment="Top"  Width="50"/>
        </StackPanel>


        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Margin="2,0,5,2" >
            <CheckBox x:Name="cbStayOnTop" Content="Stay on top" IsChecked="False"  Click="button_Click"  />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left"  Margin="41,0,0,2" Width="61">
            <Button x:Name="button_Start" Content="Start" Margin="1,1,1,1" HorizontalAlignment="Left" VerticalAlignment="Top"  Click="StartButton_Click"  />
            <Button x:Name="button_Stop" Content="Stop" Margin="1,1,1,1" HorizontalAlignment="Left"  VerticalAlignment="Top"  Click="StopButton_Click" IsEnabled="False" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="2,0,-3,2" Grid.ColumnSpan="1">

            <!--<Label Name="LabelDecoded" Content="Decoded Values" HorizontalAlignment="Center"></Label>-->

            <Button x:Name="button_Capture" Content="Capture" HorizontalAlignment="Center"  VerticalAlignment="Top"  Click="Capture_Click" Visibility="Hidden" ToolTip="Enable/Disable capture frame"/>
            <Button x:Name="bToggleMagBorder" Content="Scan Selection" HorizontalAlignment="Center" VerticalAlignment="Top" Click="bToggleMagBorder_Click" ToolTip="Emergecy postion reset of capture frame" />
            <Button x:Name="bResetMagPosition" Content="Reset Selection" HorizontalAlignment="Center" VerticalAlignment="Top" Click="bResetMagPosition_Click" Margin="0,5,0,0"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Label Content="Key"></Label>
                <ComboBox x:Name="cbActivationKey" SelectionChanged="cbActivationKey_SelectionChanged" Width="120">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="`"/>
                    <ComboBoxItem Content="Q"/>
                    <ComboBoxItem Content="E"/>
                    <ComboBoxItem Content="W"/>
                </ComboBox>
            </StackPanel>
            <CheckBox Name="cbPushRelease" Content="Push And Release mode" IsChecked="False" Checked="cbPushRelease_Checked" Unchecked="cbPushRelease_Unchecked" ToolTip="Commands will be pressed until next command is detected, or fixed time"></CheckBox>
            <CheckBox Name="cbQuickDecode" Content="Quick Decode" IsChecked="False" Checked="cbQuickDecode_Checked" Unchecked="cbQuickDecode_Unchecked" ToolTip="Wait for detection in upper left region"></CheckBox>
            <CheckBox Name="cbUse2ndImage" Content="2nd Image Detection" IsChecked="False" Checked="cbUse2ndImage_Checked"  Unchecked="cbUse2ndImage_Unchecked"  ToolTip="Utilize 2nd Region Detection"></CheckBox>


            <Button Click="buPicker_Click">Pick Color</Button>
            <WrapPanel Orientation="Horizontal">
                
                
                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorDefault" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="True" Tag="default"  Checked="cbColorDruid_Checked" Unchecked="cbColorDefault_Unchecked" >
                        <colorpicker:PortableColorPicker Name="TargetColorPicker"  Width="15" Height="15" ShowAlpha="False" ColorChanged="TargetColorPicker_ColorChanged"/>
                    </CheckBox>
                    <Label>Default</Label>
                </StackPanel>





                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorPaladin" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="paladin"  Checked="cbColorDruid_Checked" Unchecked="cbColorDefault_Unchecked">
                        <colorpicker:PortableColorPicker Name="cpColorPaladin"  Width="15" Height="15" ShowAlpha="False" />
                    </CheckBox>
                    <Label>Paladin</Label>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorDruid" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="cbColorDruid_Checked" Tag="druid" Unchecked="cbColorDefault_Unchecked">
                        <colorpicker:PortableColorPicker Name="cpDruid"  Width="15" Height="15" ShowAlpha="False" />
                    </CheckBox>
                    <Label>Druid</Label>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorWarlock" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="warlock"  Checked="cbColorDruid_Checked" Unchecked="cbColorDefault_Unchecked">
                        <colorpicker:PortableColorPicker Name="cpWarlock"  Width="15" Height="15" ShowAlpha="False" />
                    </CheckBox>
                    <Label>Warlock</Label>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorShaman" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="shaman"  Checked="cbColorDruid_Checked" Unchecked="cbColorDefault_Unchecked">
                        <colorpicker:PortableColorPicker Name="cpShamam"  Width="15" Height="15" ShowAlpha="False" />
                    </CheckBox>
                    <Label>Shaman</Label>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorRogue" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="rogue"  Checked="cbColorDruid_Checked" Unchecked="cbColorDefault_Unchecked">
                        <colorpicker:PortableColorPicker Name="cpRogue"  Width="15" Height="15" ShowAlpha="False" />
                    </CheckBox>
                    <Label>Rogue</Label>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorWarrior" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="warrior"  Checked="cbColorDruid_Checked" Unchecked="cbColorDefault_Unchecked">
                        <colorpicker:PortableColorPicker Name="cpWarrior"  Width="15" Height="15" ShowAlpha="False" />
                    </CheckBox>
                    <Label>Warrior</Label>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorEvoker" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="evoker"  Checked="cbColorDruid_Checked" Unchecked="cbColorDefault_Unchecked">
                        <colorpicker:PortableColorPicker Name="cpEvoker"  Width="15" Height="15" ShowAlpha="False" />
                    </CheckBox>
                    <Label>Evoker</Label>
                </StackPanel>


                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorHunter" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="hunter"  Checked="cbColorDruid_Checked" Unchecked="cbColorDefault_Unchecked">
                        <colorpicker:PortableColorPicker Name="cpHunter"  Width="15" Height="15" ShowAlpha="False" />
                    </CheckBox>
                    <Label>Hunter</Label>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorMage" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="mage"  Checked="cbColorDruid_Checked" Unchecked="cbColorDefault_Unchecked">
                        <colorpicker:PortableColorPicker Name="cpMage"  Width="15" Height="15" ShowAlpha="False"/>
                    </CheckBox>
                    <Label>Mage</Label>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorPriest" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="priest"  Checked="cbColorDruid_Checked" Unchecked="cbColorDefault_Unchecked">
                        <colorpicker:PortableColorPicker Name="cpPriest"  Width="15" Height="15" ShowAlpha="False" />
                    </CheckBox>
                    <Label>Priest</Label>
                </StackPanel>


                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorMonk" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="monk"  Checked="cbColorDruid_Checked" Unchecked="cbColorDefault_Unchecked">
                        <colorpicker:PortableColorPicker Name="cpMonk"  Width="15" Height="15" ShowAlpha="False" />
                    </CheckBox>
                    <Label>Monk</Label>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Width="120">
                    <CheckBox Name="cbColorDemonHunter" HorizontalAlignment="Center" VerticalAlignment="Center" Tag="hunter"  Checked="cbColorDruid_Checked" Unchecked="cbColorDefault_Unchecked">
                        <colorpicker:PortableColorPicker Name="cpDemonHunter"  Width="15" Height="15" ShowAlpha="False" />
                    </CheckBox>
                    <Label>Demon Hunter</Label>
                </StackPanel>


            </WrapPanel>
        </StackPanel>




        <Expander x:Name="expander" HorizontalAlignment="Left" Height="Auto" Header="Advanced Options" Margin="2,3,0,0" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="Top" Grid.RowSpan="2" Width="319">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="130"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>

                <Label HorizontalAlignment="Right" Grid.Column="0" Grid.Row="3">Variance</Label>
                <Slider Name="sliderColorVariancePercent" HorizontalAlignment="Left"  Grid.Column="1" Grid.Row="3"  VerticalAlignment="Top" Width="120" Minimum="0" Maximum="100" ValueChanged="sliderColorVariance_ValueChanged" Visibility="Visible" Height="18" SmallChange="1" LargeChange="2"></Slider>
                <TextBox Name="tbVariance" Width="30" HorizontalAlignment="Left" Grid.Column="2" Grid.Row="3" MaxLength="3" MaxLines="1" PreviewTextInput="PreviewTextInput" DataObject.Pasting="TextBoxPasting" TextChanged="tbVariance_TextChanged"></TextBox>


                <Label HorizontalAlignment="Right" Grid.Column="0" Grid.Row="4">Screen Cap MS</Label>
                <Slider Name="sliderCaptureRateMS" HorizontalAlignment="Left"  Grid.Column="1" Grid.Row="4"  VerticalAlignment="Top" Width="120" Minimum="0" Maximum="1000" ValueChanged="sliderCaptureRateMS_ValueChanged" Visibility="Visible" Height="18"  SmallChange="1" LargeChange="10"></Slider>
                <TextBox Name="tbCaptureRateMS"  Width="30" HorizontalAlignment="Left" Grid.Column="2" Grid.Row="4" MaxLength="3" MaxLines="1" PreviewTextInput="PreviewTextInput" DataObject.Pasting="TextBoxPasting" TextChanged="tbCaptureRateMS_TextChanged"></TextBox>

                <Label HorizontalAlignment="Right" Grid.Column="0" Grid.Row="5">Key Send MS</Label>
                <Slider Name="sliderKeyRateMS" HorizontalAlignment="Left"  Grid.Column="1" Grid.Row="5" VerticalAlignment="Top" Width="120" Minimum="0" Maximum="1000" ValueChanged="sliderKeyRateMS_ValueChanged" Visibility="Visible" Height="18"  SmallChange="1" LargeChange="10"></Slider>
                <TextBox Name="tbKeyRateMS" Width="30" HorizontalAlignment="Left" Grid.Column="2" Grid.Row="5" MaxLines="1"  PreviewTextInput="PreviewTextInput" DataObject.Pasting="TextBoxPasting" TextChanged="tbKeyRateMS_TextChanged"></TextBox>

                <!--<colorpicker:StandardColorPicker x:Name="main" Width="200" Height="380" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2"/>-->
                <StackPanel Grid.Column="3" Grid.RowSpan="6" VerticalAlignment ="Center" Orientation="Vertical">


                </StackPanel>
            </Grid>




        </Expander>

    </Grid>
</Window>
